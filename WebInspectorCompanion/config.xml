<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:rim="http://www.blackberry.com/ns/widgets"
        version="1.0.0"
        id="webinspectorcompanion">
    <name>WIC</name>
    <content src="local:///index.html" />
    <author rim:copyright="2013">RIM Canada</author>
    <description>The Web inspector companion application. Used to demonstrate the various capabilities of BlackBerry Remote Web inspector.</description>

    <access uri="*" subdomains="true" />
    <access subdomains="true" uri="https://developer.blackberry.com"/>
    <access subdomains="true" uri="http://developer.blackberry.com"/>
    <access subdomains="true" uri="http://devblog.blackberry.com"/>
    <access subdomains="true" uri="http://code.jquery.com"/>

    <icon src="images/icon.png"/>
    <rim:splash src="splash-1280x768.png"/>
    <rim:splash src="splash-720x720.png"/>

    <feature id="blackberry.app">
      <param name="orientation" value="portrait" />
    </feature>

    <feature id="blackberry.app" />
    <feature id="blackberry.bbm.platform" />
    <feature id="blackberry.invoke" />
    <feature id="blackberry.invoke.card" />
    <feature id="blackberry.ui.cover" />
    <feature id="blackberry.ui.dialog" />
    <feature id="blackberry.ui.toast" />

    <rim:permissions>
        <rim:permit>bbm_connect</rim:permit>
        <rim:permit>access_shared</rim:permit>
        <rim:permit>read_geolocation</rim:permit>
    </rim:permissions>
</widget>