	xmlns:rim="http://www.blackberry.com/ns/widgets" 
	version="1.0.1" id="EnyoBB10Sample" xml:lang="en">
	
	<name>EnyoBB10</name>
	<description>Enyo Sample App</description>
	<author rim:copyright="2012" email="twindsor@rim.com" href="http://www.blackberry.com/developers">Tim Windsor</author>
	
	<icon src="assets/enyologo.png"/>
	<rim:splash src="enyo_banner.png"/>
	
	<content src="debug.html"/>
	
	<rim:permissions>
		<rim:permit>access_shared</rim:permit>
	</rim:permissions>
	
	<feature id="blackberry.app">
		<param name="backgroundColor" value="0xff1284b3" />
	</feature>
	<feature id="blackberry.system"/>
	<feature id="blackberry.ui.dialog"/>
	<feature id="blackberry.invoke"/>
	<feature id="blackberry.invoke.card"/>
	<feature id="blackberry.app.orientation">
		<param name="mode" value="portrait" />
	</feature>

