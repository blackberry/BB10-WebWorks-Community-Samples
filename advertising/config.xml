<widget xmlns="http://www.w3.org/ns/widgets"
		xmlns:rim="http://www.blackberry.com/ns/widgets"
		version="1.0.0.0"
		id="com.oros.ads">

	<name>Ads</name>
	<author>Oros</author>
	<content src="index.html" />

	<!-- Required to access the Ad Network. -->
	<access uri="http://mocean.mobi" subdomains="true" />

	<!-- Required for UUID, Language, and MCC in BlackBerry 10; respectively. -->
	<feature id="blackberry.identity" />
	<feature id="blackberry.system" />
	<feature id="community.deviceInfo" />

	<!-- Required for community.deviceInfo. -->
	<rim:permissions>
		<rim:permit>read_cellular_data</rim:permit>
	</rim:permissions>
</widget>
