<widget xmlns="http://www.w3.org/ns/widgets"
		xmlns:rim="http://www.blackberry.com/ns/widgets"
		version="1.0.0"
		id="extendedsearch">
	<name>Extended Search Sample</name>
	<content src="local:///index.html" />
	<author rim:copyright="2013"
			href="http://twitter.com/timothywindsor"
			email="@timothywindsor">Tim Windsor</author>
	<description>Extended Search Sample</description>
	<access uri="*" subdomains="true" />

	<icon src="icon.png"/>
	
	<feature id="blackberry.ui.toast" />
	<feature id="blackberry.ui.cover" />
	<feature id="blackberry.invoked" version="1.0.0" required="true" />
	<feature id="blackberry.invoke" version="1.0.0" required="true" />
	<rim:invoke-target id="com.bb.test.extendedsearch">
		<type>APPLICATION</type>
		<filter>
			<action>bb.action.SEARCH.EXTENDED</action>
			<mime-type>application/vnd.bb.search.criteria</mime-type>
		</filter>
	</rim:invoke-target>
</widget>